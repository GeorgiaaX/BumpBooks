<body>
    {{> _header}}
    {{> _add_btn}}
    <div class="container">
        {{{body}}}
    </div>

    {{!-- Include the materializeCSS javascript library from a CDN--}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
       {{!-- Include the CKEDITOR javascript library from a CDN--}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.14.1/ckeditor.js"
        integrity="sha256-bEIQpI72w9NJuIVhTLFUF2/8uxl0u5800r8ddViuv+o=" crossorigin="anonymous"></script>

    <script>
        //initialize the materializeCSS side nav component for navigation
        M.Sidenav.init(document.querySelector('.sidenav'))
        //initialize the materializeCSS form select components for tags and status dropdowns
        M.FormSelect.init(document.querySelector('#tags'))
        M.FormSelect.init(document.querySelector('#status'))
        //initialize the materializeCSS drop down components
        M.Dropdown.init(document.querySelectorAll('.dropdown-trigger'))
        //initialize the CKEditor for the body textarea with specific plugins
        CKEDITOR.replace('body', {
            plugins: 'wysiwygarea, toolbar, basicstyles, link'
        })
        //initialize the CKEditor for the profileDesc textarea with specific plugins
         CKEDITOR.replace('profileDesc', {
            plugins: 'wysiwygarea, toolbar, basicstyles, link'
        })
    </script>
</body>
</html>